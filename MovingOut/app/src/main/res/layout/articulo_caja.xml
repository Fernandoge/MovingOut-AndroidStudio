<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="98dp"
        android:layout_height="53dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textArticuloCajaNombre"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/textArticuloCajaCantidad"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Cantidad" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEditArticuloCaja"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/edit_icon"></Button>

        <Button
            android:id="@+id/buttonDeleteArticuloCaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/delete_icon"></Button>
    </LinearLayout>



</LinearLayout>