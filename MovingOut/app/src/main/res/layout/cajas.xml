<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/textCajaNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Button" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCajaTamanio"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="TamaÃ±o:" />

                <TextView
                    android:id="@+id/textCajaEstado"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:text="Estado:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/textCajaEtiqueta"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:text="Etiqueta 1" />

                <Button
                    android:id="@+id/textCajaEtiqueta2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ETIQUETA 2" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCajaDescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion:" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonEditCaja"
            android:layout_width="74dp"
            android:layout_height="88dp"
            android:background="@mipmap/edit_icon"></Button>

        <Button
            android:id="@+id/buttonDeleteCaja"
            android:layout_width="74dp"
            android:layout_height="88dp"
            android:background="@mipmap/delete_icon"></Button>
    </LinearLayout>


</LinearLayout>