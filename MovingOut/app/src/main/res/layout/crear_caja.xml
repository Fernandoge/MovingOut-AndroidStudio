<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical">

    <EditText
        android:id="@+id/inputCajaNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Caja" />

    <EditText
        android:id="@+id/inputCajaDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripcion Caja" />


    <TextView
        android:id="@+id/text8"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="bottom"
        android:text="TamaÃ±o Caja"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/dropdownCajaTamanio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />


    <Button
        android:id="@+id/buttonAddCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/button_azul"
        android:text="Agregar"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonCancelCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/button_azul"
        android:text="Cancelar"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textMoverCaja"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="bottom|left"
        android:text="Mover a otro cuarto"
        android:textSize="18dp" />
    <Spinner
        android:id="@+id/dropdownMoverCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/buttonMoverCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/button_azul"
        android:text="Mover"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/buttonEliminarCaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/button_naranjo"
        android:text="Eliminar Caja"
        android:textColor="#FFFFFF" />

</LinearLayout>