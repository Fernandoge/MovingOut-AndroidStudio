<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/inputItemNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Articulo" />


    <Button
        android:id="@+id/buttonAddCuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar" />

    <Button
        android:id="@+id/buttonCancelCuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar" />

    <Button
        android:id="@+id/buttonEliminarArticuloCuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Articulo" />

    <TextView
        android:id="@+id/textMoverArticuloCuarto"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="bottom|left"
        android:text="Mover a otro cuarto" />
    <Spinner
        android:id="@+id/dropdownMoverArticuloCuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/buttonMoverArticuloCuarto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mover" />


</LinearLayout>