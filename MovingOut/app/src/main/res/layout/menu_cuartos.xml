<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/beach_background2"
    tools:context=".Activities.ActivityCuartos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonAddArticuloCuarto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/add_cuarto"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonOpenEtiquetas"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:background="@mipmap/menu_etiquetas"
            android:gravity="center|right"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="228dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/text7"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_weight="0" />

    <ListView
        android:id="@+id/listBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"></ListView>

</LinearLayout>